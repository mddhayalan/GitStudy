#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('Build') {
            agent { label 'buildserver' }
            options {
               timeout(time: 1, unit: 'HOURS')
               timestamps()
            }
            steps {
                cleanWs() //Cleans the jenkins workspace
                checkout scm // checkout the required github repository
                CallDotNetBuild("generator.sln")
                CallDotNetBuild("TestApp//TestApp.sln")
                stash("build-ws")
            }
        }
        stage('Test') {
            agent { label 'buildserver' }
            options {
               timeout(time: 1, unit: 'HOURS')
               timestamps()
            }
            steps {
                unstash("build-ws")
                CallDotNetTest("apiTests//apiTests.csproj")
            }
        }        
    }
}

def CallDotNetBuild(String solutionPath) {
    RunBatch("dotnet build ${WORKSPACE}//${solutionPath}")
} 

def CallDotNetTest(String solutionPath) {
    RunBatch("dotnet test ${WORKSPACE}//${solutionPath}")
}

def RunBatch(String command) {
    sh returnStatus: false, script:"${command}"
}