#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('Build') {
            agent { label 'buildserver' }
            options {
               timeout(time: 1, unit: 'HOURS')
               timestamps()
            }
            steps {
                cleanWs()
                checkout scm
                CallDotNetBuild("generator.sln")
                CallDotNetBuild("TestApp//TestApp.sln")
            }
        }        
    }
}

def CallDotNetBuild(String solutionPath) {
    RunBatch("dotnet build ${WORKSPACE}//${solutionPath}")
} 

def RunBatch(String command) {
    sh returnStatus: false, script:"${command}"
}