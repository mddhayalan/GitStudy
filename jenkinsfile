#!/usr/bin/env groovy

pipeline {
    agent none
    stages {
        stage('Build') {
            agent { label 'buildserver' }
            options {
               timeout(time: 1, unit: 'HOURS')
               timestamps()
            }
            steps {
                cleanWs()
                checkout scm
                script {
                    dotnet build generator.sln
                    dotnet build TestApp/TestApp.sln
                }
            }
        }        
    }
}